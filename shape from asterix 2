#include<stdio.h>
int main(){
int b=2,i,j,a;
scanf("%d",&a);
//"i" şeklin satırlarını kontrol eder
//"i" controls the row of shapes
for(i=0;i<a;i++){
        //"j" kaç tane asterix basılacağını kontrol eder
        //"j" controls how many asterix will print
    for(j=1;j<b;j++){
        printf("*");
    }
//her satırdan sonra yeni satır karakterini çağırır
//call the newline character after each row
    printf("\n");
    b+=1;
}
return 0;
}
